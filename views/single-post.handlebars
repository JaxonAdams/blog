<article class="post post-page-post">
    <div class="title">
        <h2 class="post-title">{{post.title}}</h2>
        <h3 class="post-subtitle">By {{post.user.username}} on {{format_date post.created_at}}</h3>
    </div>
    <div class="content">
        <p class="post-content">{{post.content}}</p>
    </div>

    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>

        <div>
            <button type="submit">Add Comment</button>
        </div>
    </form>
    {{else}}
    <h2 class="login-message">Please log in to post a comment.</h2>
    {{/if}}

    <div class="comments">
        {{#each post.comments}}
        <section class="comment">
            <div class="meta">
                {{user.username}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </section>
        {{/each}}
    </div>
</article>
{{#if loggedIn}}
<script src="/js/comment.js" defer></script>
{{/if}}